<% if user_signed_in? %>
<%= render "layouts/header" %>
  <br><br><br><br><br><br><br><br><br><br><br><br>
  <div id="bookshelf">
    <% @books.each_with_index do |book, i| %>
      <div id=<%= "book#{i}" %> style=<%= "background-image:url();left:#{i * 50}px" %>> <%= book[:title] %></div>
    <% end %>   
  </div>

  <ul class="indexbooklist">
    <% @books.each do |book| %>
      <li><%= book[:title] %>  <%= book[:author] %><br>
        ISBN: <%= book[:isbn] %><br>
        Genre: <%= book[:genre] %></li>
        <button>Book Has Been Shipped</button>
    <% end %>
  </ul>
  <% end %>